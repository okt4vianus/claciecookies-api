{
  "name": "claciecookies-api",
  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun install && bun prisma migrate deploy && bun prisma generate --no-hints",
    "start": "bun run src/index.ts",
    "docker:up": "docker compose up -d",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:status": "prisma migrate status",
    "db:gen": "prisma generate --no-hints",
    "db:seed": "prisma db seed",
    "db:reset": "prisma migrate reset",
    "db:studio": "prisma studio --browser none"
  },
  "prisma": {
    "seed": "bun prisma/seed.ts"
  },
  "dependencies": {
    "@hono/zod-openapi": "^0.19.5",
    "@hono/zod-validator": "^0.4.3",
    "@prisma/client": "^6.6.0",
    "@scalar/hono-api-reference": "^0.8.5",
    "hono": "^4.7.7",
    "pg": "^8.15.6",
    "slugify": "^1.6.6",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.15.2",
    "@types/pg": "^8.11.14",
    "prisma": "^6.6.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  }
}

{
  "name": "claciecookies-api",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun install && bun prisma migrate deploy && bun prisma generate --no-hints",
    "start": "bun run src/index.ts",
    "db:up": "docker compose up -d",
    "db:migrate": "bun prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:status": "prisma migrate status",
    "db:gen": "prisma generate --no-hints",
    "db:seed": "prisma db seed",
    "db:reset": "prisma migrate reset",
    "db:studio": "prisma studio --browser none"
  },
  "prisma": {
    "seed": "bun prisma/seed.ts"
  },
  "dependencies": {
    "@hono/zod-openapi": "^0.19.6",
    "@scalar/hono-api-reference": "^0.8.5",
    "@prisma/client": "^6.6.0",
    "hono": "^4.7.8",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prisma": "^6.6.0",
    "typescript": "^5.8.3"
  }
}
